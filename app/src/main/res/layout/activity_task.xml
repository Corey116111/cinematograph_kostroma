<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kalancha"
    tools:context=".TaskActivity">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ГОРЬКИЙ 53"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#F1EDE2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintHeight_percent="0.10"/>

    <!-- Карточка -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/atPlaceButton"
        app:layout_constraintHeight_percent="0.55">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1EDE2">

            <TextView
                android:id="@+id/taskTextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#96939380"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Как драгоценная реликвия в ладонях, главный символ Костромы покоится на ее гербе"
                android:fontFamily="@font/robotoserif"

                android:textColor="#4c4a4a"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/questionTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.7"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Найдите это место"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"
                android:textColor="#222"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/taskTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.3"/>

            <ImageButton
                android:id="@+id/hintButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/helper"
                app:circularflow_radiusInDP="50dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="Подсказка"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/atPlaceButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Я НА МЕСТЕ"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:backgroundTint="#333"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/menuButton"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/menuButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="МЕНЮ"
        android:textAllCaps="true"
        android:backgroundTint="#fff"
        android:textColor="#333"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>