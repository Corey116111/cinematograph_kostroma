<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_rounded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialogQuestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сколько колонн у беседки?"
        android:textSize="18sp"
        android:textColor="#222"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Введите ответ:"
        android:textSize="16sp"
        android:textColor="#444"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/dialogAnswerInput"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_edittext_rounded"
        android:padding="8dp"
        android:textColor="#222"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/dialogCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="НАЗАД"
            android:backgroundTint="#fff"
            android:textColor="#444"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_button_white_rounded"/>

        <Button
            android:id="@+id/dialogCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ПРОВЕРИТЬ"
            android:backgroundTint="#444"
            android:textColor="#fff"
            android:background="@drawable/bg_button_dark_rounded"/>
    </LinearLayout>
</LinearLayout>